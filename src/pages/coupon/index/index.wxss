.coupon-container .coupon-header {
  width: 100%;
  height: 50px;
  background: -webkit-linear-gradient(left top, #FFD700, #FF8F00, #FF0040);
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 40px;
  justify-content: space-around;
  font-size: 17px;
  color: #fff;
}
.coupon-container .coupon-header .coupon-title {
  position: relative;
}
.coupon-container .coupon-header .coupon-title :hover {
  font-weight: bold;
}
.coupon-container .coupon-header .coupon-title .active {
  font-weight: bold;
}
.coupon-container .coupon-header .coupon-title .coupon-bor {
  position: absolute;
  width: 15px;
  height: 3px;
  background: #fff;
  left: 50%;
  margin-left: -8px;
  top: 30px;
  border-radius: 1px;
}
.coupon-container .coupon-list-container {
  width: 100%;
  padding: 20px;
}
.coupon-container .coupon-list-container .coupon-list {
  width: 100%;
}
.coupon-container .coupon-list-container .coupon-list .coupon-bgd1 {
  background: url('https://cdn.ibrand.cc/coupon-bgd1.png') no-repeat;
  border: 1px dashed #000000;
}
.coupon-container .coupon-list-container .coupon-list .coupon-bgd2 {
  background: url('https://cdn.ibrand.cc/coupon-bgd2.png') no-repeat;
  border: 1px dashed #999999;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item {
  width: 100%;
  height: 100px;
  background-size: 335px 100px;
  padding: 0 18px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 10px;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .font-one {
  font-size: 12px;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .color-one {
  color: #8E8E8E;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .expire-color1 {
  color: #8E8E8E;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .expire-color2 {
  color: #ABABAB;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .expire-color3 {
  color: #999999;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .font-two {
  font-size: 15px;
  margin-left: -10px;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .color-two {
  color: #333333;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .left15 {
  margin-left: 15px;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .font-three {
  font-size: 10px;
}
.coupon-container .coupon-list-container .coupon-list .coupon-item .color-three {
  color: #FE1852;
}
